<div id="sub-chapter-list-<%= @chapter.id %>">
  <% @chapter.sub_chapters.each do |sub_chapter| %>
    <div class="sub-chapter" id="sub-chapter-<%= sub_chapter.id %>">
      <% if chapter_creator? %>
        <h4><%= link_to sub_chapter.title, sub_chapter_path(sub_chapter) %></h4>
        <%= link_to fa_icon('edit', class: "fa-2x").html_safe, "#" %>
        <%= link_to '<i class="fa fa-trash-o fa-2x del-sub-chapter"></i>'.html_safe, sub_chapter_path(sub_chapter), method: :delete, data: { confirm: "Are you sure?" }, class: "delete-sub-chapter" %>
        

      <% else %>
        <h4><%= link_to sub_chapter.title, sub_chapter_path(sub_chapter), class: "sub-chapter-link", data: {"reveal-id" => "popup-sub-chapter-full"} %></h4>
      <% end %>
    </div>
  <% end %>
</div>

<% if chapter_creator? %>
  <%= link_to "Add Sub-section #{fa_icon('plus-square', class: 'fa-2x', id: 'fa-plus-square')}".html_safe, new_chapter_sub_chapter_path(@chapter), class: "add-sub-chapter", data: {"reveal-id" => "popup-sub-chapter"} %>
  <div id="sub-chapter-form-<%= @chapter.id %>" style="display: none;"></div>
<% end %>


