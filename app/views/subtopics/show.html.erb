
<% @tutorials.each do |tutorial| %>
		  <%= link_to tutorial_path(tutorial) do %>  
		    <div class="tutorial-list medium-10-offs columns">
				<li>
					<p class="tut-title">
						<%= tutorial.title %>
					</p>
					<p class="tut-description">
						<%= tutorial.description %>
					</p>
					<p class="author-date">
						<%= authorship(tutorial) %>
					</p>
				</li>
		    </div>
	      <% end %>
	    <div class="medium-2 columns"></div>
<% end %>

